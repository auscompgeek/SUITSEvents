{
  "compilerOptions": {
    "baseUrl": "src",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "module": "es6",
    "target": "es6",
    "sourceMap": false,
    "strict": true,
    "jsx": "preserve",
    "allowJs": false,
    "skipLibCheck": true,
    "experimentalDecorators": true
  },
  "exclude": ["node_modules"]
}
